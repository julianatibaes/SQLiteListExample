<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="6dp"
    android:background="@drawable/background_fragment">

    <com.tibaes.agaproject.util.CircleImageView
        android:id="@+id/item_list_photo_client"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_centerInParent="true"
        android:src="@drawable/eu"
        app:civ_border_color="@color/colorWhite"
        app:civ_border_width="2dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="34dp"
            android:id="@+id/item_list_name"
            android:text="Nome"
            android:textSize="20sp"
            android:textStyle="bold"
            android:paddingLeft="10dp"
            android:textColor="@color/colorBlack"/>

        <TextView
            android:id="@+id/item_list_phone"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:drawableLeft="@android:drawable/stat_sys_phone_call"
            android:paddingLeft="10dp"
            android:text="(42) 99999-999"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:textStyle="bold" />

       <!-- Cria uma linha entre um item e outro
         <View
            android:id="@+id/vw_divider"
            android:layout_marginTop="10dp"
            android:layout_marginRight="56dp"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="0.8dp" />-->
    </LinearLayout>

</LinearLayout>